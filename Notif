-- Design Pro Minimaliste (Sombre & Indigo)
local function CreateProNotify(titleText, descText)
    local CoreGui = game:GetService("CoreGui")
    
    local sg = Instance.new("ScreenGui")
    sg.Name = "OmniNotify"
    sg.Parent = CoreGui

    -- Main Frame (Fond Noir 15, 15, 15)
    local MainFrame = Instance.new("Frame")
    MainFrame.Name = "MainFrame"
    MainFrame.Parent = sg
    MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15) -- Fond personnalisé
    MainFrame.AnchorPoint = Vector2.new(0.5, 0)
    MainFrame.Position = UDim2.new(0.5, 0, 0, -80)
    MainFrame.Size = UDim2.new(0, 220, 0, 65)
    MainFrame.BorderSizePixel = 0
    
    local UICorner = Instance.new("UICorner")
    UICorner.CornerRadius = UDim.new(0, 6)
    UICorner.Parent = MainFrame

    -- Bordure fine (Utilise la couleur secondaire 130, 135, 179 avec transparence)
    local UIStroke = Instance.new("UIStroke")
    UIStroke.Color = Color3.fromRGB(130, 135, 179) 
    UIStroke.Thickness = 2
    UIStroke.Transparency = 0
    UIStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    UIStroke.Parent = MainFrame

    -- Titre (Blanc Pur)
    local Title = Instance.new("TextLabel")
    Title.Parent = MainFrame
    Title.BackgroundTransparency = 1
    Title.Position = UDim2.new(0, 15, 0.2, 0)
    Title.Size = UDim2.new(0, 190, 0, 20)
    Title.Font = Enum.Font.GothamBold -- Changé en Bold pour plus de punch
    Title.Text = titleText:upper()
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.TextSize = 13
    Title.TextXAlignment = Enum.TextXAlignment.Left

    -- Description (Gris clair pour lisibilité)
    local Desc = Instance.new("TextLabel")
    Desc.Parent = MainFrame
    Desc.BackgroundTransparency = 1
    Desc.Position = UDim2.new(0, 15, 0.55, 0)
    Desc.Size = UDim2.new(0, 190, 0, 20)
    Desc.Font = Enum.Font.Gotham
    Desc.Text = descText
    Desc.TextColor3 = Color3.fromRGB(200, 200, 200)
    Desc.TextSize = 11
    Desc.TextXAlignment = Enum.TextXAlignment.Left



    -- Animation d'entrée fluide
    MainFrame:TweenPosition(UDim2.new(0.5, 0, 0, 35), "Out", "Quart", 0.6, true)



    task.wait(4)

    -- Animation de sortie
    MainFrame:TweenPosition(UDim2.new(0.5, 0, 0, -80), "In", "Quart", 0.6, true)
    
    task.wait(0.6)
    sg:Destroy()
end

-- Appel du script
CreateProNotify("Omni Executor", "API Attached Successfully.")
